// Portfolio Grid Section
section#portfolio.bg-light-gray
  .container
    .row
      .col-lg-12.text-center
        h2.section-heading Find your adventure
        |                     
        h3.section-subheading.text-muted Choose between activities and regions 
    |             
    .row
      .col-lg-12
        form(method="POST" role="form" action="/search")
          input(type='hidden', name='_csrf', value=_csrf)

          .row
            .col-md-3.col-md-offset-3
              .form-group
                label(for='activity')  What do you want to do? 
                |                                    
                |                                         
                select.form-control(name='activity')
                  option(selected='', value='all')  All activities
                  option(value='biking') Biking
                  option(value='fishing') Fishing
                  option(value='climbing') Climbing
                  option(value='kayak') Kayak
                  option(value='horseriding') Horse riding
                  option(value='offroad') Offroad 4x4
                  option(value='rafting') Rafting
                  option(value='surf') Surfing
                  option(value='sandboard') Sandboard
                  option(value='trekking') Trekking

 
            |                              
            |                              
            .col-md-3
              .form-group
                label(for='activities')  Where do you want to go? 
                |                                        
                |                                         
                select.form-control(name='location')
                  option(selected='', value='all')  All regions
                  option(value='arequipa') Arequipa
                  option(value='cuzco') Cuzco
                  option(value='huaraz') Huaraz
                  option(value='puno')  Puno

            |        
            |                                
            |                             
            .clearfix
            |                             
            .col-lg-12.text-center
              button.btn.btn-xl(type='submit') Search
              |                                 
              h4.section-subheading.text-muted
                br
                | Or
                br
                br
                a.page-scroll(href='#about') Find out about us